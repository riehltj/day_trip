      
<div class="bg-base-200 p-4">
  <div class="flex flex-wrap justify-between items-center gap-3">
    <div class="flex items-center gap-2">
      <%= lucide_icon('map', class: 'h-5 w-5 text-primary flex-shrink-0') %>
      <h2 class="card-title text-xl">
        <%= link_to @trip.ride.destination, ride_path(@trip.ride), class: "text-primary hover:text-primary-focus hover:underline transition-colors" %>
      </h2>
    </div>

    <div class="badge badge-lg badge-accent text-white whitespace-nowrap">
      <%= @trip.ride.leave_date.strftime('%A, %b %d, %Y') %>
    </div>
  </div>
</div>
