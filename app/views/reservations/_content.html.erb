<ul class="list divide-y divide-base-200">
  <li class="list-row p-4">
    <%= lucide_icon('clock', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Departure Time</div>
      <div class="text-base-content/70"><%= @reservation.ride.leave_time.strftime('%l:%M %p').strip %></div>
    </div>
  </li>

  <li class="list-row p-4">
    <%= lucide_icon('map-pin', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Pickup Location</div>
      <%= link_to @reservation.ride.meetup_location, "http://maps.google.com/?q=#{@reservation.ride.meetup_location}", class: 'link', target: "_blank" %>
    </div>
  </li>

  <li class="list-row p-4">
    <%= lucide_icon('user', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Driver</div>
      <div class="flex items-center gap-3 mt-1">
        <%= user_avatar(@reservation.ride.driver.user) %>
        <div>
          <div><%= @reservation.ride.driver.user.full_name %></div>
          <div class="text-xs text-base-content/70">
            <%= @reservation.ride.driver.user.age %>, <%= @reservation.ride.driver.user.gender_full %>
          </div>
        </div>
      </div>
    </div>
  </li>

  <li class="list-row p-4">
    <%= lucide_icon('car', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Vehicle</div>
      <div class="flex items-center gap-3 mt-1">
        <div class="avatar">
          <div class="w-10 h-10 rounded bg-base-300">
            <%= image_tag @reservation.ride.driver.car_photo.presence || 'default_car.png', class: 'object-cover' %>
          </div>
        </div>
        <div>
          <div><%= @reservation.ride.driver.full_car_details %></div>
        </div>
      </div>
    </div>
  </li>

  <li class="list-row p-4">
    <%= lucide_icon('users', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Reservations</div>
      <div class="flex justify-between items-center mt-1">
        <div><strong>Seats:</strong> <%= @reservation.number_of_seats %></div>
      </div>
    </div>
  </li>

  <li class="list-row p-4">
    <%= lucide_icon('receipt', class: 'h-5 w-5 text-primary') %>
    <div class="list-col-grow">
      <div class="font-medium">Payment</div>
      <div class="bg-base-200 p-3 rounded-lg mt-2">
        <div class="flex justify-between items-center">
          <span>Cost per seat:</span>
          <span><%= humanized_money_with_symbol(@reservation.ride.cost_per_rider) %></span>
        </div>
        <div class="flex justify-between items-center mt-1">
          <span>Number of seats:</span>
          <span><%= @reservation.number_of_seats %></span>
        </div>
        <div class="divider my-2"></div>
        <div class="flex justify-between items-center font-bold">
          <span>Total:</span>
          <span><%= humanized_money_with_symbol(@reservation.total_cost) %></span>
        </div>
      </div>
    </div>
  </li>

  <li class="list-row p-4 bg-base-100/50">
    <%= lucide_icon('info', class: 'h-5 w-5 text-base-content/60') %>
    <div class="list-col-grow">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
        <div>
          <p class="text-base-content/60">Reservation ID:</p>
          <p class="font-mono"><%= @reservation.id %></p>
        </div>
        <div>
          <p class="text-base-content/60">Reservation Date:</p>
          <p><%= @reservation.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </li>
</ul>
