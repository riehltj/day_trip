<div class="min-h-screen px-6 sm:px-20">
  <h1 class="font-bold text-4xl text-center my-8">My Reservations</h1>

  <% if @reservations.present? %>
    <%= render partial: 'reservation_card', collection: @reservations, as: :reservation %>
  <% else %>
    <div class="max-w-lg mx-auto text-center py-8">
      <div class="inline-block p-6 bg-base-200 rounded-full mb-4">
        <%= lucide_icon('map-pin', class: 'h-12 w-12 text-primary') %>
      </div>

      <h2 class="text-xl font-semibold mb-2">No Reservations Found</h2>
      <p class="text-base-content/70 max-w-md mx-auto mb-6">
        You don't have any reservations booked yet. Ready to plan your next adventure?
      </p>

      <%= link_to rides_path, class: "btn btn-primary btn-md" do %>
        <%= lucide_icon('compass', class: 'mr-2 h-5 w-5') %> Explore Available Rides
      <% end %>

      <div class="mt-8 card bg-base-200 shadow-sm">
        <div class="card-body p-4">
          <div class="flex items-center gap-2 text-sm text-base-content/80">
            <%= lucide_icon('lightbulb', class: 'h-4 w-4 text-warning') %>
            <span>Tip: Day reservations are a great way to explore new places without the commitment of a longer vacation.</span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
