<div class="card bg-base-100 shadow-md hover:shadow-lg transition-all border border-base-300 overflow-hidden max-w-2xl mx-auto">
  <div class="card-body space-y-4 p-4 sm:p-5">

    <!-- Header -->
    <div class="flex justify-between items-center border-b border-base-200 pb-2">
      <div class="flex items-center gap-2 text-primary">
        <%= lucide_icon('map', class: 'h-4 w-4') %>
        <%= link_to reservation.ride.destination, ride_path(reservation.ride), class: "font-semibold text-base sm:text-lg hover:underline" %>
      </div>
      <div class="badge badge-accent text-white text-xs sm:text-sm">
        <%= reservation.ride.leave_date.strftime('%b %d') %> â€¢ <%= reservation.ride.leave_time.strftime('%l:%M %p').strip %>
      </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <!-- Left: Driver + Vehicle -->
      <div class="space-y-2 text-sm text-base-content/80">
        <div class="flex items-center gap-2">
          <%= lucide_icon('user', class: 'h-4 w-4 text-primary') %>
          <span><%= reservation.ride.driver.user.full_name %> (<%= reservation.ride.driver.user.age %>)</span>
        </div>
        <div class="flex items-center gap-2">
          <%= lucide_icon('map-pin', class: 'h-4 w-4 text-primary') %>
          <span class="truncate">
                <%= link_to reservation.ride.meetup_location, "http://maps.google.com/?q=#{reservation.ride.meetup_location}", class: 'link', target: "_blank" %>
          </span>
        </div>
        <div class="flex items-center gap-2">
          <%= lucide_icon('car', class: 'h-4 w-4 text-primary') %>
          <span class="truncate"><%= reservation.ride.driver.full_car_details %></span>
        </div>
      </div>

      <!-- Right: Stats Box -->
      <div class="bg-base-200 rounded-xl p-3 space-y-2 text-sm">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-1">
            <%= lucide_icon('users', class: 'h-3 w-3 text-primary') %>
            <span><%= reservation.number_of_seats %> seat<%= 's' if reservation.number_of_seats != 1 %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span>Total</span>
          <span class="font-semibold text-base"><%= humanized_money_with_symbol(reservation.total_cost) %></span>
        </div>
        <div class="text-right pt-2">
          <%= link_to reservation_path(reservation), class: "btn btn-primary btn-sm" do %>
            Details
            <%= lucide_icon('chevron-right', class: 'h-3 w-3 ml-1') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
