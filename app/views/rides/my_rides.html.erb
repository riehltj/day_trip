<div class="bg-cover bg-center min-h-screen px-6 sm:px-20">
  <h1 class="font-bold text-4xl text-center my-8">My Rides</h1>
  <% if current_user.driver? %>
    <div class="flex justify-end w-full">
      <%= render 'components/new_ride_button' %>
    </div>
  <% end %>

  <% if @rides.empty? %>
    <div class="col-span-full text-center text-gray-500 py-8">
      You have no rides yet.
    </div>
  <% else %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-auto p-4">
      <%= render partial: 'ride_card', collection: @rides, as: :ride %>
    </div>
  <% end %>
</div>
