<li class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 border-b pb-2">
  <div class="flex items-center gap-2">
    <%= user_avatar(reservation.user) %>
    <div>
      <span class="font-medium"><%= reservation.user.full_name %></span>
      <div class="text-xs text-gray-500">
        <%= pluralize(reservation.number_of_seats, "seat") %> â€¢ 
      </div>
    </div>
  </div>

  <div class="flex gap-2">
    <% case reservation.status %>
    <% when 'pending' %>
      <div class="flex gap-2">
        <%= button_to reject_reservation_path(reservation, ride_id: reservation.ride.id),
              method: :patch,
              data: { turbo: false },
              class: "btn btn-error btn-xs" do %>
          <%= lucide_icon('x', class: 'h-3 w-3 mr-1') %>
        <% end %>

        <%= button_to accept_reservation_path(reservation, ride_id: reservation.ride.id),
              method: :patch,
              data: { turbo: false },
              class: "btn btn-success btn-xs" do %>
          <%= lucide_icon('check', class: 'h-3 w-3 mr-1') %>
        <% end %>
      </div>

    <% when 'accepted' %>
      <div class="btn btn-success btn-xs text-white">
        Accepted
      </div>

    <% when 'rejected' %>
      <div class="btn btn-error btn-xs text-white">
        Rejected
      </div>
    <% end %>
  </div>
</li>
