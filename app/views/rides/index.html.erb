<div class="bg-cover bg-center min-h-screen px-6 sm:px-20">
  <h1 class="font-bold text-4xl text-center my-8">Explore Rides</h1>
  <div class="w-full flex justify-center md:justify-end">
    <% if user_signed_in? && current_user.driver.present? %>
      <%= render 'components/new_ride_button' %>
    <% end %>
  </div>

  <% if @rides.empty? %>
    <div class="flex flex-col items-center justify-center py-24 text-center text-gray-500">
      <%= lucide_icon('mountain-snow', class: 'w-16 h-16 text-accent mb-4 opacity-60') %>
      <h2 class="text-2xl font-bold text-base-content mb-2">The mountain is waiting</h2>
      <p class="text-base-content/60 max-w-sm">No rides posted yet â€” be the first to share a seat and make someone's day.</p>
      <% if user_signed_in? && current_user.driver.present? %>
        <%= render 'components/new_ride_button' %>
      <% end %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-auto p-4">
      <%= render partial: 'ride_card', collection: @rides, as: :ride %>
    </div>
  <% end %>
</div>
