<nav class="bg-grey shadow-md p-4">
  <div class="max-w-7xl mx-auto flex justify-between items-center">
    <!-- Logo / Brand -->
    <a href="/" class="text-2xl font-bold text-blue-600">DayTrip</a>

    <div class="flex gap-2">
      <a href="<%= rides_path %>" class="text-gray-700 hover:text-blue-600">Rides</a>
      <% if user_signed_in? %>
        <a href="<%= bookings_path %>" class="text-gray-700 hover:text-blue-600">My Bookings</a>
      <% end %>
    </div>

    <!-- Authentication (Sign In / Sign Out) -->
    <div class="flex justify-end items-center space-x-4">
      <% if user_signed_in? %>
        <span class="text-gray-700">Hello, <%= current_user.full_name %>!</span>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-red-600 hover:text-red-800" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "text-blue-600 hover:text-blue-800" %>
      <% end %>
    </div>
  </div>
</nav>
