<div class="max-w-5xl mx-auto my-8 px-4">
  <div class="flex flex-col md:flex-row gap-8 mb-8">
    <!-- Left columnt -->
    <div class="md:w-1/3 flex flex-col gap-4">
      <div class="card bg-base-100 shadow-lg overflow-hidden">
        <%= render 'driver_photo', driver: @driver %>
        <%= render 'driver_info', driver: @driver %>
      </div>
      <%= render 'payment_settings', driver: @driver if current_user == @driver.user %>
    </div>
    <!-- Right column -->
    <div class="md:w-2/3 flex flex-col gap-6">
      <%= render 'vehicle_card', driver: @driver %>
      <%= render 'reviews_section', driver: @driver %>
    </div>
  </div>
</div>
