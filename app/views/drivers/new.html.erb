<h2 class="text-2xl font-bold text-center mb-4">New Driver Registration</h2>

<%= form_for(@driver, url: drivers_path, html: { class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <div class="form-control">
    <%= f.label :car_make, class: "label" do %>
      <span><%= lucide_icon('car', class: 'h-4 w-4 mr-2') %> Car Make</span>
    <% end %>
    <%= f.text_field :car_make, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :car_model, class: "label" do %>
      <span><%= lucide_icon('settings', class: 'h-4 w-4 mr-2') %> Car Model</span>
    <% end %>
    <%= f.text_field :car_model, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :car_year, class: "label" do %>
      <span><%= lucide_icon('calendar', class: 'h-4 w-4 mr-2') %> Car Year</span>
    <% end %>
    <%= f.text_field :car_year, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :description, class: "label" do %>
      <span><%= lucide_icon('file-text', class: 'h-4 w-4 mr-2') %> Bio</span>
    <% end %>
    <%= f.text_area :description, class: "textarea textarea-bordered w-full h-24", placeholder: "Tell riders a bit about yourself..." %>
    <p class="text-sm text-gray-500 mt-1">Share a brief introduction about yourself to help riders feel comfortable.</p>
  </div>

  <div class="form-control">
    <%= f.label :car_photo, class: "label" do %>
      <span><%= lucide_icon('image', class: 'h-4 w-4 mr-2') %> Upload Car Photo</span>
    <% end %>
    <%= f.file_field :car_photo, class: "file-input file-input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Make sure it's a clear and well-lit photo of your car.</p>
  </div>

  <div class="form-control">
    <%= f.label :license_plate_photo, class: "label" do %>
      <span><%= lucide_icon('star', class: 'h-4 w-4 mr-2') %> Upload License Plate Photo</span>
    <% end %>
    <%= f.file_field :license_plate_photo, class: "file-input file-input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Ensure the license plate is clearly readable.</p>
  </div>

  <div class="form-control">
    <%= f.label :twitter, class: 'label' do %>
      <span><%= lucide_icon('twitter', class: 'h-4 w-4 mr-2') %> Twitter</span>
    <% end %>
    <%= f.text_field :twitter, class: "input input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Optional: Share your social media links for verification.</p>
  </div>

  <div class="form-control">
    <%= f.label :instagram, class: 'label' do %>
      <span><%= lucide_icon('instagram', class: 'h-4 w-4 mr-2') %> Instagram</span>
    <% end %>
    <%= f.text_field :instagram, class: "input input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Optional: Share your social media links for verification.</p>
  </div>
  
  <div class="form-control">
    <%= f.label :facebook, class: 'label' do %>
      <span><%= lucide_icon('facebook', class: 'h-4 w-4 mr-2') %> Facebook</span>
    <% end %>
    <%= f.text_field :facebook, class: "input input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Optional: Share your social media links for verification.</p>
  </div>

  <div class="form-control">
    <%= f.submit "Register as Driver", class: "btn btn-primary w-full" %>
  </div>
<% end %>
<% if current_user.stripe_account_id.blank? %>
  <p class="flex items-center"><%= lucide_icon('credit-card', class: 'h-4 w-4 mr-2') %> You haven't connected your Stripe account yet.</p>
  <%= button_to onboarding_stripe_path, method: :post, class: "bg-accent text-white px-4 py-2 rounded flex items-center justify-center", data: { turbo: false } do %>
    <%= lucide_icon('link', class: 'h-4 w-4 mr-2') %> Connect with Stripe
  <% end %>
<% else %>
  <p class="flex items-center"><%= lucide_icon('check-circle', class: 'h-4 w-4 mr-2') %> Your Stripe account is connected âœ…</p>
<% end %>