<h2 class="text-2xl font-bold text-center mb-4">New Driver Registration</h2>

<%= form_for(@driver, url: drivers_path, html: { class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <div class="form-control">
    <%= f.label :car_make, "Car Make", class: "label" %>
    <%= f.text_field :car_make, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :car_model, "Car Model", class: "label" %>
    <%= f.text_field :car_model, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :car_year, "Car Year", class: "label" %>
    <%= f.text_field :car_year, class: "input input-bordered w-full" %>
  </div>

  <div class="form-control">
    <%= f.label :car_photo, "Upload Car Photo", class: "label" %>
    <%= f.file_field :car_photo, class: "file-input file-input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Make sure it's a clear and well-lit photo of your car.</p>
  </div>

  <div class="form-control">
    <%= f.label :license_plate_photo, "Upload License Plate Photo", class: "label" %>
    <%= f.file_field :license_plate_photo, class: "file-input file-input-bordered w-full" %>
    <p class="text-sm text-gray-500 mt-1">Ensure the license plate is clearly readable.</p>
  </div>

  <div class="form-control mt-4">
    <%= f.submit "Register as Driver", class: "btn btn-primary w-full" %>
  </div>
<% end %>
